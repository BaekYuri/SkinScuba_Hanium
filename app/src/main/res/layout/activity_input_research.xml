<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"></ImageView>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:src="@drawable/banner_01" />
        <TextView
            android:text="Step 1. 피부타입 체크하기"
            android:gravity="center"
            android:textColor="#ee9293"
            android:textSize="20dp"/>
        <TextView
            android:text=" "/>
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. 스킨케어 제품을 바꾸는 것에 대해서 불안함을 느낀다."
                android:layout_span="2"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="#111"
                android:lineSpacingExtra="12sp"
                android:gravity="center_horizontal"/>
        </TableRow>
        <TableRow>
            <RadioGroup
                android:id="@+id/min">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/minYes"
                    android:text="네"
                    android:textSize="16sp"
                    android:textColor="#444"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/minNo"
                    android:text="아니오"
                    android:textSize="16sp"
                    android:textColor="#444"/>
            </RadioGroup>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. 현재 여드름이 있다."
                android:layout_span="2"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="#111"
                android:lineSpacingExtra="12sp"
                android:gravity="center_horizontal"/>
        </TableRow>
        <TableRow>
            <RadioGroup
                android:id="@+id/yod">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/yodYes"
                    android:text="네"
                    android:textSize="16sp"
                    android:textColor="#444"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/yodNo"
                    android:text="아니오"
                    android:textSize="16sp"
                    android:textColor="#444"/>
            </RadioGroup>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. 아토피를 앓은 경험이 있거나 현재 아토피 제품을 사용하고 있다."
                android:layout_span="2"
                android:layout_weight="1"
                android:textSize="18sp"
                android:textColor="#111"
                android:lineSpacingExtra="12sp"
                android:gravity="center_horizontal"/>
        </TableRow>
        <TableRow>
            <RadioGroup
                android:id="@+id/ah">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ahYes"
                    android:text="네"
                    android:textSize="16sp"
                    android:textColor="#444"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ahNo"
                    android:text="아니오"
                    android:textSize="16sp"
                    android:textColor="#444"/>
            </RadioGroup>
        </TableRow>
        <TableRow>
            <ImageButton
                android:layout_column="21"
                android:id="@+id/skintypeOK"
                android:layout_width="193dp"
                android:layout_height="wrap_content"
                android:src="@drawable/yesbutton"
                android:background="@null"
                android:scaleType="fitCenter"/>
        </TableRow>
    </TableLayout>
    </ScrollView>
